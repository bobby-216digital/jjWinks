{{ 'customer.css' | asset_url | stylesheet_tag }}
<div class="customer reset-password py-section px-rail space-y-6"
  data-section-id="{{ section.id }}"
  data-section-type="reset-password">
  <div class="reset-password__container text-center mx-auto max-w-screen">

    <div class="reset-password__header mb-6 pb-4 border-b border-primary-section-border">
      <h1 class="text-3xl md:text-4xl text-center">{{ 'customer.reset_password.title' | t }}</h1>
    </div>

    <div class="reset-password__content mx-auto">
      <p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>

      {%- form 'reset_customer_password' -%}
        {%- if form.errors -%}
          <div class="reset-password__message px-4 py-2 bg-primary-secondary-background mb-4 prose">
            <div class="outline-none mb-1" role="alert" tabindex="-1" autofocus>
              <span class="inline-block w-3 mr-1 text-red-600">
                {%- render 'icon-ui-error' -%}
              </span> {{ form.errors | default_errors }}</div>
          </div>
        {%- endif -%}

        <div class="reset-password__contain text-left max-w-[28rem] mx-auto space-y-4">
          <div class="reset-password__field">
            <label for="ResetPassword-password">{{ 'customer.activate_account.password' | t }}</label>
            <input id="ResetPassword-password" type="password"
              autocomplete="new-password"
              name="customer[password]"
              aria-required="true">
          </div>

          <div class="reset-password__field">
            <label for="ResetPassword-passwordconfirmation">{{ 'customer.activate_account.password_confirm' | t }}</label>
            <input id="ResetPassword-passwordconfirmation" type="password"
              autocomplete="new-password"
              name="customer[password_confirmation]"
              aria-required="true">
          </div>

          <div class="flex items-center flex-col justify-center">
            <button class="button button--cta button--solid">
              {{ 'customer.reset_password.submit' | t }}
            </button>
          </div>
        </div>

      {%- endform -%}
    </div>
  </div>
</div>