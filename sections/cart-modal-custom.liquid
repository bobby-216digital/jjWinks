{{ 'custom-modal.css' | asset_url | stylesheet_tag }}
<script>
  let validationCustomer = '{{ customer.orders_count }}';
  window.cartStrings = validationCustomer && parseInt(validationCustomer) === 0 ? true : false;
</script>
<script src="{{ 'custom-modal.js' | asset_url }}" defer="defer"></script>
<custom-modal class="">
  <div role="dialog" aria-label="POPUP Form" aria-modal="true" class="container-modal">
    <div data-testid="POPUP" style="flex: 1 1 0%;" class="needsclick  kl-private-reset-css-Xuajs1">
      <div class="container-elements">
        <div class="needsclick  kl-private-reset-css-Xuajs1">
          <div class="container-button-close">
            <button tabindex="0" class="button-close">
              <svg
                role="img"
                width="35"
                height="35"
                viewBox="0 0 20 20"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
                aria-labelledby="close-form-1"
                class="needsclick  kl-private-reset-css-Xuajs1"
              >
                <title id="close-form-1">Close form 1</title><circle style="cursor: pointer;" cx="10" cy="10" r="9.5" fill="rgba(255,255,255,1)" stroke="rgba(255,255,255,0)"></circle><path style="cursor: pointer;" d="M6 6L14 14M6 14L14 6L6 14Z" stroke="#373F47" stroke-width="1" stroke-linecap="round" stroke-linejoin="round"></path>
              </svg>
            </button>
            <div class="container-left" data-testid="klaviyo-form-XA3LcD" novalidate="" tabindex="-1">
              <p style="width: 100%;text-align: center; font-size: 14px; font-family: Arial, 'Helvetica Neue', Helvetica, sans-serif; font-weight: 400;">
                <span style="color: #373f47; font-family: Poppins, 'Helvetica Neue', Helvetica, Arial, sans-serif; font-weight: 400;">
                  <span style="font-size: 36px;"><strong>{{ section.settings.headline }}</strong></span></span
                >
              </p>
              <div style="text-align: center; font-size: 20px; font-family: Arial, 'Helvetica Neue', Helvetica, sans-serif; font-weight: 400;">
                {{ section.settings.content }}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</custom-modal>
{% schema %}
{
  "name": "Cart Custom Modal",
  "settings": [
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "Save 15% on your first order!"
    },
    {
      "type": "text",
      "id": "content",
      "label": "html",
      "default": "<p>use coupon <strong>CART15</strong></p>"
    }
  ]
}
{% endschema %}