<cart-notification id="cart-notification" class="cart-notification"
  aria-modal="true" aria-label="{{ 'general.cart.item_added' | t }}"
  role="dialog" tabindex="-1">
  <div class="cart-notification__container">
    <div class="cart-notification__title">
      <span>{{ 'general.cart.item_added' | t }}</span>
      <button id="CollectionDrawerModalClose-{{ block.id }}" type="button"
        class="cart-notification__close"
        aria-label="{{ 'accessibility.close' | t }}">{% render 'icon-ui-close' %}</button>
    </div>
    <div id="cart-notification-product" class="cart-notification__product"></div>
    {% if settings.cart_show_progress_bar %}
      <div class="progress-bar-container"
        data-incomplete="{{ settings.cart_small_incomplete_progress_bar_message | replace: '[[complete]]', '' }}"
        data-complete="{{ settings.cart_small_complete_progress_bar_message | replace: '[[complete]]', '' }}"
        data-incompleteicon="{{ settings.cart_incomplete_progress_bar_icon.src | img_url: 'original' }}"
        data-completeicon="{{ settings.cart_complete_progress_bar_icon.src | img_url: 'original' }}"
        data-product-price="{{ settings.cart_progress_bar_gift_product.compare_at_price | money }}"
        data-priceformat="{{ 0 | money }}"
      >
        <div class="progress-bar">
          <div class="progress"></div>
        </div>
        <p class="progress-bar-message" style="font-weight: bold; display: flex; align-items: center;">
        </p>
      </div>
      <style>
        .cart-notification__container  .progress-bar-container {
          margin-bottom: 1em;
        }
        .cart-notification__container  .progress-bar-container .progress-bar-message {
          margin-top: .3em;
        }
        .cart-notification__container .progress-bar-container .progress-bar {
          display: flex;
          max-width: 100%;
          background: rgba(0, 0, 0, 0.1);
          height: 0.5rem;
          border-radius: 0.25rem;
        }

        .cart-notification__container .progress-bar-container .progress-bar .progress {
          background-color: #839565;
          height: 0.5rem;
          border-radius: 0.25rem;
        }
      </style>
    {% endif %}
    <div id="cart-notification-links" class="cart-notification__links">
      <a href="{{ routes.cart_url }}" class="cart-notification__cart">{{ 'general.cart.view' | t: count: cart.item_count }}</a>
      <form action="{{ routes.cart_url }}" method="post" id="cart-notification-form">
        <button class="cart-notification__checkout" name="checkout">{{ 'sections.cart.checkout' | t }}</button>
      </form>
      <button type="button" class="cart-notification__continue">{{ 'general.continue_shopping' | t }}</button>
    </div>
  </div>
</cart-notification>